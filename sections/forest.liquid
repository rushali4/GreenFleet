
<div width: 100% height: 450px>
  <h1>{{ section.settings.headline }}</h1>
  {% if section.blocks.size > 0 %}
    {% assign image_url = section.blocks.settings.image_1 | image_url: width: 100, height: 100 %}
    <img src="{{ image_url }}" alt="Image" width="100" height="100"/>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Forest",
    "settings": [
      {
        "type": "text",
        "label": "Headline",
        "id" : "headline"
      }
    ],
    "blocks": [
      {
        "name" : "image",
        "type": "image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_1",
            "label": "image"
          }
        ]
      }
    ],
    "presets": [{
        "name": "Forest"
      }
    ]
  }
{% endschema %}